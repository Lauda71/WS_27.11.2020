<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Step_3_man">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Step 3/5"
            android:textColor="@color/black"
            android:fontFamily="@font/font"
            android:layout_marginTop="130dp"
            android:textSize="50dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="что будем качать?"
            android:textColor="@color/black"
            android:fontFamily="@font/font"
            android:layout_marginTop="30dp"
            android:textSize="30dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/but_step3_man_1"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:accessibilityHeading="false"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/font"
                android:text="Мышца 1"
                app:cornerRadius="25dp">
            </Button>

            <Button
                android:id="@+id/but_step3_man_2"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:accessibilityHeading="false"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/font"
                android:text="Мышца 2"
                app:cornerRadius="25dp">
            </Button>

            <Button
                android:id="@+id/but_step3_man_3"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:accessibilityHeading="false"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/font"
                android:text="Мышца 3"
                app:cornerRadius="25dp">
            </Button>

            <Button
                android:id="@+id/but_step3_man_4"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:accessibilityHeading="false"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/font"
                android:text="Мышца 4"
                app:cornerRadius="25dp">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_marginTop="50dp"
                android:id="@+id/divider_step3_man_1"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:foreground="@color/black"
                android:background="?android:attr/listDivider" />

            <View
                android:layout_marginTop="80dp"
                android:id="@+id/divider_step3_man_2"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:foreground="@color/black"
                android:background="?android:attr/listDivider" />

            <View
                android:layout_marginTop="80dp"
                android:id="@+id/divider_step3_man_3"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:foreground="@color/black"
                android:background="?android:attr/listDivider" />

            <View
                android:layout_marginTop="80dp"
                android:id="@+id/divider_step3_man_4"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:foreground="@color/black"
                android:background="?android:attr/listDivider" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_man">
            </ImageView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>